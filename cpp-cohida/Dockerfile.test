FROM ubuntu:22.04

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    curl \
    zip \
    unzip \
    pkg-config \
    bison \
    flex \
    autoconf \
    automake \
    libtool \
    && rm -rf /var/lib/apt/lists/*

# Install vcpkg
RUN git clone https://github.com/microsoft/vcpkg.git /opt/vcpkg
WORKDIR /opt/vcpkg
RUN ./bootstrap-vcpkg.sh && chmod +x vcpkg

# Enable vcpkg integration
ENV VCPKG_ROOT=/opt/vcpkg
ENV PATH="${VCPKG_ROOT}:${PATH}"

# Create directory for custom boost-decimal port
RUN mkdir -p /opt/vcpkg/ports/boost-decimal

# Copy the custom port files directly into the installed vcpkg
COPY vcpkg/ports/boost-decimal/portfile.cmake /opt/vcpkg/ports/boost-decimal/
COPY vcpkg/ports/boost-decimal/vcpkg.json /opt/vcpkg/ports/boost-decimal/

# List the boost ports to verify it's there
RUN ls -la /opt/vcpkg/ports | grep -i boost

# Copy project files (vcpkg directory is already installed, so we don't copy it)
WORKDIR /app
COPY CMakeLists.txt .
COPY vcpkg.json .
COPY include/ ./include/
COPY src/ ./src/
COPY tests/ ./tests/
COPY examples/ ./examples/

# Create build directory
RUN mkdir -p build

# Install dependencies using vcpkg
RUN vcpkg install

# Build the project in test mode
WORKDIR /app/build
RUN cmake .. -DCMAKE_TOOLCHAIN_FILE=/opt/vcpkg/scripts/buildsystems/vcpkg.cmake -DCMAKE_BUILD_TYPE=Debug
RUN make -j$(nproc)

# Run unit tests
# Tests will be run by the container entrypoint/command

# Default command
CMD ["./bin/cohida-unit-tests"]